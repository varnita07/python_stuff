 # print a pattern by using *like this;

#1st
rows = 5
for i in range(1, rows + 1):
    print('* ' * i)

# 2nd
rows = 5
for i in range(rows, 0, -1):
    print(' ' * (rows - i) + '*' * i)    

#3rd
n = 5
for i in range(1, n + 1):
    for j in range(1, i + 1):
        print(j, end="")
    print()  

#4th
n = 5
for i in range(1, n + 1):
    pattern = ""
    for j in range(i):
        pattern += chr(65 + j)  
    print(pattern) 